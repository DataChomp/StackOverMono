@{
	ViewBag.Title = "Home Page";
	

}

<script type="text/javascript">
	$(function () {
		$("#tabs").tabs();
	});
</script>



<h2>Hello Mr. Sullivan</h2>

<div id="tabs">
	<ul>
		<li><a href="#tabs-1">Recent</a></li>
		<li><a href="#tabs-2">Hot</a></li>
	</ul>
	<div id="tabs-1">
		<p>This is the most recent stuff!</p>

		@foreach (var recent in ViewBag.RecentPosts)
		{
		   <p>Vote: Answers: @recent.answercount Views: @recent.viewcount Title: @recent.title
			<br />@recent.tags  - <b>@recent.displayname</b> - @recent.reputation</p>
		}

	</div>
	<div id="tabs-2">
		<p>The hottest stuff in the DB!</p>
		@foreach (var recent in ViewBag.HotPosts)
		{
		   <p>Vote: Answers: @recent.answercount Views: @recent.viewcount Title: @recent.title
			<br />@recent.tags  - <b>@recent.displayname</b> - @recent.reputation</p>
		}
	</div>
</div>